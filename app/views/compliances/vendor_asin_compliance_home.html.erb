<h2> Management Page for Compliance Set</h2><br/><br/>
<div class="compliance">
  <table class="compliance_sets">
    <tr>
      <td>
        Vendor
      </td>
      <td>
        <%= Vendor.find(params[:vendor_id]).code unless params[:vendor_id].nil? %>
      </td>
    </tr>
    <tr>
      <td>
        Sku
      </td>
      <td>
        <%= params[:sku] unless params[:sku].nil? %>
      </td>
    </tr>
    <% if params[:vendor_id] && params[:sku] then %>
        <tr>
          <td>
            Create a new Compliance Set
          </td>
          <td>
            <%= link_to "New Compliance Set", new_compliance_path(:sku => params[:sku], :vendor_id => params[:vendor_id]) %>
          </td>
        </tr>
    <% end %>
  </table>
</div>

<div class="compliance">
  <h3> <%= "Listing Vendor Owned Compliance Sets" unless @compliances_vendor.empty? %> </h3>
  <table class="compliance_sets">
    <%= render :partial => 'compliance_summary', :collection => @compliances_vendor, :as => :compliance   unless @compliances_vendor.empty? %>
  </table>
</div>

<div class="compliance">
  <h3> <%= "Listing User Owned Compliance Sets" unless @compliances_user.empty? %> </h3>
  <table class="compliance_sets">
    <%= render :partial => 'compliance_summary', :collection => @compliances_user, :as => :compliance   unless @compliances_user.empty? %>
  </table>
</div>

<div class="compliance">
  <h3> <%= "Listing User Approved Compliance Sets" unless @compliances_approved.empty? %> </h3>
  <table class="compliance_sets">
    <%= render :partial => 'compliance_summary', :collection => @compliances_approved, :as => :compliance   unless @compliances_approved.empty? %>
  </table>
</div>

