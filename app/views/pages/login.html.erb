<div id='container' >

    <% form_tag :action => 'authenticate' do %>
        <div class="box">
            <label>
                <span><%= label_tag :username %></span>
                <%= text_field_tag :username, params[:username], :class => "box_textfield" %>
            </label>
        </div>
        <div class="box">
            <label>
              <span><%= label_tag :password %></span>
              <%= password_field_tag :password, nil,  :class => "box_textfield" %>
            </label>
        </div>
        <div class="box">
                <span class="box_button">
                  Vendor        <%= radio_button_tag 'session_selector', "vendor", false %>
                  User          <%= radio_button_tag 'session_selector', "user", false %>
                    </span>
        </div>


        <div class="box">
            <label>
            <%= submit_tag 'Login', :class => 'box_button ui-button ui-widget ui-state-default ui-corner-all' %>
            </label>
        </div>

    <% end %>

</div>
