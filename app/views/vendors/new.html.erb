<h3> New Vendor Registration</h3>

<%= form_for @vendor do |f| %>


   <% if @vendor.errors.any? %>

        <div class="error_messages" >
          <h1> Errors </h1>
          <% for message in @vendor.errors.full_messages %>
          <ul>
            <li> <%= message %></li>
          </ul>
          <% end %>
        </div>

    <% end %>


    <table class = "vendortable">

        <tr>
          <td>
            <%= f.label :code %>
          </td>
          <td>
            <%= f.text_field :code %>
          </td>
        </tr>

      <tr>
        <td>
          <%= f.label :name %>
        </td>
        <td>
          <%= f.text_field :name %>
        </td>
      </tr>

      <tr>
        <td>
          <%= f.label :contact %>
        </td>
        <td>
          <%= f.text_field :contact %>
        </td>
      </tr>

      <tr>
        <td>
          <%= f.label :is_import %>
        </td>
        <td>
          <%= f.check_box :is_import, {}, "true", "false" %>
        </td>
      </tr>

      <tr>
        <td>
          <%= f.label :is_private_label %>
        </td>
        <td>
          <%= f.check_box :is_private_label, {}, "true", "false" %>
        </td>
      </tr>

      <tr>
        <td>
          <%= f.label :password  %>
        </td>
        <td>
          <%= f.password_field :password %>
        </td>
      </tr>

      <tr>
        <td>
          <%= f.label :password_confirmation  %>
        </td>
        <td>
          <%= f.password_field :password_confirmation %>
        </td>
      </tr>


      <tr>
        <td colspan="2">
          <%= f.submit 'Register' %>
        </td>
      </tr>

    </table>

<% end %>